  <!-- Installation -->
  <section class="install" id="installation">
    <div class="container">
      <div class="section-header">
        <h2>In 3 Schritten einsatzbereit</h2>
        <p>GonoPBX l&auml;sst sich in wenigen Minuten auf jedem Linux-Server installieren.</p>
      </div>

      <!-- Supported platforms -->
      <div class="platform-grid">
        <div class="platform-item fade-in">
          <div class="platform-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
